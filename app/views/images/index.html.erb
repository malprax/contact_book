
<%=form_for  @image, :url => images_path, :html => { :multipart => true } do |f| %>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :picture_file_name %><br>
  <%= f.file_field :picture_file_name %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>









