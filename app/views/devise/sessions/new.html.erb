<% content_for :title, "Sign In" %>



<!-- Content Page Text -->
<!-- Contact Us -->
<div class="container">
    <div class="row">
           
            <form>
              <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div><%= f.label :email %><br />
                <%= f.email_field :email, :autofocus => true, placeholder:"Enter your email..." %></div>

                <div><%= f.label :password %><br />
                <%= f.password_field :password, placeholder:"Enter your password..."  %></div>

                <% if devise_mapping.rememberable? -%>
                  <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                <% end -%>

                <%= f.submit "Sign in" %>
              <% end %>               
               
                <div >
                  <%= render "devise/shared/links" %>  
                </div>   
   
                <div >
                  <%= link_to "Webmail", "http://webmail.runiah-school.com" %>      
                </div>
                <div >
                  <%= link_to "Cpanel", "http://euly.dnsbit.net/cpanel" %>
                </div>
            </form>
          
    </div>
</div>


      
    


